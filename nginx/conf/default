server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name _;
    index index.nginx-debian.html;

    ssl_certificate /etc/ssl/certs/server.crt;
    ssl_certificate_key /etc/ssl/private/server.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    root /var/www/html;
    error_log /var/log/nginx/error.log;
}
